<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.cakeshop">
    <uses-permission android:name="android.permission.INTERNET"/>


    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/MyAppTheme"
        android:name=".ContextApplication"
        >
        <activity android:name=".MainActivity" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".activity.OrderActivity" ></activity>
        <activity android:name=".activity.PreInfoActivity" ></activity>
        <activity android:name=".activity.PreInfoManagerActivity" ></activity>
        <activity android:name=".activity.SettingActivity" ></activity>
        <activity android:name=".activity.EditUserActivity"></activity>
        <activity android:name=".activity.UserOrderActivity"></activity>
        <activity android:name=".activity.UserOrderDetailActivity"></activity>
        <activity android:name=".activity.SpuInfoActivity"></activity>
        <activity android:name=".activity.RegisterActivity"></activity>
    </application>

</manifest>